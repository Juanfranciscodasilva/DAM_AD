<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.actividad1.DepartamentosEntity" table="departamentos" schema="actividad1">
        <id name="codDepartamento">
            <column name="cod_departamento" sql-type="varchar(10)" length="10"/>
        </id>
        <property name="nombre">
            <column name="nombre" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="ubicacion">
            <column name="ubicacion" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>